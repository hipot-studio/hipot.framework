    "ext-gd": "*",
    "ext-fileinfo": "*",
    "wikimedia/composer-merge-plugin": "dev-master",
    "intervention/image": "^2.5",
    "psr/container": "1.0.*",
    "psr/http-client": "1.0.*",
    "psr/http-message": "1.0.*"
  },
  "config": {
    "allow-plugins": true,
    "vendor-dir": "../local/vendor",
